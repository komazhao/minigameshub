  "categories": [
    "games",
    "entertainment",
    "lifestyle"
  ],
  
  "shortcuts": [
    {
      "name": "Featured Games",
      "short_name": "Featured",
      "description": "Browse featured games",
      "url": "/featured",
      "icons": [
        {
          "src": "/assets/images/shortcut-featured.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Action Games",
      "short_name": "Action",
      "description": "Play action games",
      "url": "/categories/action",
      "icons": [
        {
          "src": "/assets/images/shortcut-action.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Puzzle Games",
      "short_name": "Puzzle",
      "description": "Play puzzle games",
      "url": "/categories/puzzle",
      "icons": [
        {
          "src": "/assets/images/shortcut-puzzle.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Racing Games",
      "short_name": "Racing",
      "description": "Play racing games",
      "url": "/categories/racing",
      "icons": [
        {
          "src": "/assets/images/shortcut-racing.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+minigame",
      "url": "/games?gameId=%s"
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}