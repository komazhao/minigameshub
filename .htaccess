# .htaccess for MiniGamesHub.co
# Apache configuration for SEO, security, and performance

# ----------------------------------------------------------------------
# | Rewrite engine                                                     |
# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Force www (optional - uncomment if you want to force www)
    # RewriteCond %{HTTP_HOST} ^minigameshub\.co [NC]
    # RewriteRule ^(.*)$ https://www.minigameshub.co/$1 [R=301,L]
    
    # Remove www (force non-www - recommended for gaming sites)
    RewriteCond %{HTTP_HOST} ^www\.minigameshub\.co [NC]
    RewriteRule ^(.*)$ https://minigameshub.co/$1 [R=301,L]
    
    # SEO-friendly URLs for games
    RewriteRule ^games/([a-zA-Z0-9\-]+)/?$ /games/$1.html [L]
    RewriteRule ^game/([a-zA-Z0-9\-]+)/?$ /games/$1.html [R=301,L]
    
    # SEO-friendly URLs for categories
    RewriteRule ^categories/([a-zA-Z0-9\-]+)/?$ /categories/$1.html [L]
    RewriteRule ^category/([a-zA-Z0-9\-]+)/?$ /categories/$1.html [R=301,L]
    
    # Handle legacy URLs
    RewriteRule ^play/([a-zA-Z0-9\-]+)/?$ /games/$1 [R=301,L]
    RewriteRule ^gaming/([a-zA-Z0-9\-]+)/?$ /categories/$1 [R=301,L]
    
    # Remove trailing slashes (except for directories)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [R=301,L]
    
    # Block access to sensitive files
    RewriteRule ^(\.htaccess|\.htpasswd|robots\.txt|sitemap\.xml)$ - [F,L]
</IfModule>

# ----------------------------------------------------------------------
# | Cross-Origin Resource Sharing (CORS)                             |
# ----------------------------------------------------------------------

<IfModule mod_headers.c>
    # Allow cross-origin requests for game files
    <FilesMatch "\.(js|css|json|woff|woff2|eot|ttf|svg|png|jpg|jpeg|gif|ico)$">
        Header set Access-Control-Allow-Origin "*"
        Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
        Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"
    </FilesMatch>
    
    # Allow embedding in iframes for game content
    <FilesMatch "\.(html)$">
        Header set X-Frame-Options "SAMEORIGIN"
        Header set Content-Security-Policy "frame-ancestors 'self' https://minigameshub.co https://*.minigameshub.co"
    </FilesMatch>
</IfModule>

# ----------------------------------------------------------------------
# | Security headers                                                   |
# ----------------------------------------------------------------------

<IfModule mod_headers.c>
    # Remove server signature
    Header unset Server
    Header unset X-Powered-By
    
    # Security headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=(), ambient-light-sensor=()"
    
    # HSTS (HTTP Strict Transport Security)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Content Security Policy for game content
    Header always set Content-Security-Policy "default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https: blob:; style-src 'self' 'unsafe-inline' https: fonts.googleapis.com; font-src 'self' https: fonts.gstatic.com data:; img-src 'self' https: data: blob:; media-src 'self' https: blob:; frame-src 'self' https:; connect-src 'self' https:; worker-src 'self' blob:;"
</IfModule>

# ----------------------------------------------------------------------
# | Compression                                                        |
# ----------------------------------------------------------------------

<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML and fonts
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/x-font-ttf
    AddOutputFilterByType DEFLATE application/x-font-woff
    AddOutputFilterByType DEFLATE application/x-font-woff2
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    
    # Remove browser bugs (only needed for really old browsers)
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent
</IfModule>

# ----------------------------------------------------------------------
# | Expires headers (for better cache control)                        |
# ----------------------------------------------------------------------

<IfModule mod_expires.c>
    ExpiresActive on
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Images
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # Fonts
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/x-font-ttf "access plus 1 year"
    ExpiresByType font/opentype "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    
    # HTML and XML
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType text/xml "access plus 1 hour"
    ExpiresByType application/xml "access plus 1 hour"
    ExpiresByType application/json "access plus 1 hour"
    
    # Manifests
    ExpiresByType application/x-web-app-manifest+json "access plus 1 week"
    ExpiresByType text/cache-manifest "access plus 0 seconds"
    
    # RSS feeds
    ExpiresByType application/rss+xml "access plus 1 hour"
    
    # Default
    ExpiresDefault "access plus 1 month"
</IfModule>

# ----------------------------------------------------------------------
# | Cache-Control headers                                              |
# ----------------------------------------------------------------------

<IfModule mod_headers.c>
    # CSS and JS files
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Image files
    <FilesMatch "\.(png|jpg|jpeg|gif|svg|webp|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Font files
    <FilesMatch "\.(woff|woff2|ttf|eot|otf)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # HTML files
    <FilesMatch "\.html$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
    
    # JSON and XML files
    <FilesMatch "\.(json|xml)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
    
    # Service Worker
    <Files "sw.js">
        Header set Cache-Control "public, max-age=0, must-revalidate"
    </Files>
    
    # Manifest
    <Files "manifest.json">
        Header set Cache-Control "public, max-age=604800"
    </Files>
</IfModule>

# ----------------------------------------------------------------------
# | ETags                                                              |
# ----------------------------------------------------------------------

<IfModule mod_headers.c>
    # Remove ETags as we're using Cache-Control
    Header unset ETag
</IfModule>

FileETag None

# ----------------------------------------------------------------------
# | Canonical URL enforcement                                          |
# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
    # Redirect index.html to root
    RewriteCond %{THE_REQUEST} \s/+index\.html[\s?] [NC]
    RewriteRule ^ / [R=301,L]
    
    # Redirect .html extension for clean URLs
    RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
    RewriteRule ^ /%1 [R=301,L]
</IfModule>

# ----------------------------------------------------------------------
# | Error pages                                                        |
# ----------------------------------------------------------------------

ErrorDocument 404 /404.html
ErrorDocument 403 /403.html
ErrorDocument 500 /500.html
ErrorDocument 502 /502.html
ErrorDocument 503 /503.html

# ----------------------------------------------------------------------
# | Prevent access to hidden files and folders                        |
# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
    RewriteCond %{SCRIPT_FILENAME} -d [OR]
    RewriteCond %{SCRIPT_FILENAME} -f
    RewriteRule "(^|/)\." - [F]
</IfModule>

# Block access to files that can expose sensitive information
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# ----------------------------------------------------------------------
# | Block bad bots and referrers                                      |
# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
    # Block bad user agents
    RewriteCond %{HTTP_USER_AGENT} (ahrefs|majestic|moz\.com|semrush) [NC]
    RewriteRule .* - [F,L]
    
    # Block spam referrers
    RewriteCond %{HTTP_REFERER} (poker|casino|loan|pharmacy|viagra) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# ----------------------------------------------------------------------
# | Game-specific optimizations                                        |
# ----------------------------------------------------------------------

# Prevent hotlinking of game files
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://minigameshub\.co [NC]
    RewriteCond %{HTTP_REFERER} !^https?://www\.minigameshub\.co [NC]
    RewriteCond %{REQUEST_URI} \.(png|gif|jpg|jpeg|webp|js|css)$ [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Special handling for game iframe sources
<IfModule mod_headers.c>
    # Allow games to be embedded
    <FilesMatch "\.html$">
        Header always set X-Frame-Options "ALLOWALL"
    </FilesMatch>
</IfModule>

# ----------------------------------------------------------------------
# | MIME types                                                         |
# ----------------------------------------------------------------------

<IfModule mod_mime.c>
    # Web fonts
    AddType application/font-woff2 .woff2
    AddType application/font-woff .woff
    AddType application/x-font-ttf .ttf
    AddType font/opentype .otf
    
    # Manifest files
    AddType application/manifest+json .webmanifest
    AddType application/x-web-app-manifest+json .webapp
    
    # Other
    AddType text/cache-manifest .appcache .manifest
    AddType text/vtt .vtt
    AddType image/webp .webp
    AddType image/avif .avif
</IfModule>

# ----------------------------------------------------------------------
# | UTF-8 encoding                                                     |
# ----------------------------------------------------------------------

AddDefaultCharset utf-8

<IfModule mod_mime.c>
    AddCharset utf-8 .atom \
                     .bbaw \
                     .css \
                     .geojson \
                     .ics \
                     .js \
                     .json \
                     .jsonld \
                     .rdf \
                     .rss \
                     .topojson \
                     .vtt \
                     .webapp \
                     .xloc \
                     .xml
</IfModule>